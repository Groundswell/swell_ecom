
.container
	.row
		.col-xs-12


			%form.stripe_form{:action => "/your-charge-code", :method => "POST"}
				%span.payment-errors
				.form-row
					%label
						%span Card Number
						%input{"data-stripe" => "number", :size => "20", :type => "text", :value => '4242 4242 4242 4242'}/
				.form-row
					%label
						%span Expiration (MM/YY)
						%input{"data-stripe" => "exp_month", :size => "2", :type => "text", :value => '12'}/
					%span /
					%input{"data-stripe" => "exp_year", :size => "2", :type => "text", :value => '18'}/
				.form-row
					%label
						%span CVC
						%input{"data-stripe" => "cvc", :size => "4", :type => "text", :value => '123'}/
				.form-row
					%label
						%span Billing ZIP Code
						%input{"data-stripe" => "address_zip", :size => "6", :type => "text", :value => '12345'}/
				%input.btn.submit{:type => "submit", :value => "Submit Payment", :class => ($items.present? ? '' : 'disabled'), :disabled => ($items.present? ? nil : 'disabled')}/


%script{:src => "https://js.stripe.com/v2/", :type => "text/javascript"}

:javascript
	Stripe.setPublishableKey('#{ENV['STRIPE_PUBLIC_KEY']}');
